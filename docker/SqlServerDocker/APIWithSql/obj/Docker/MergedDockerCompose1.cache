services:
  apiwithsql:
    build:
      context: D:\ClientCode\AzureSamples\docker\SqlServerDocker\APIWithSql
      dockerfile: APIWithSql/Dockerfile
      target: base
    depends_on:
    - db
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages
    image: apiwithsql:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages  bin/Debug/netcoreapp2.0/APIWithSql.dll'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/bash -c "if PID=$$(pidof
        -x dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 8000
      target: 80
    - target: 80
    volumes:
    - D:\ClientCode\AzureSamples\docker\SqlServerDocker\APIWithSql\APIWithSql:/app:rw
    - C:\Users\hbhasin\vsdbg\vs2017u5:/remote_debugger:ro
    - C:\Program Files\dotnet\sdk\NuGetFallbackFolder:/root/.nuget/fallbackpackages:ro
    - C:\Users\hbhasin\.nuget\packages:/root/.nuget/packages:ro
  db:
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: PassW0rd
    image: microsoft/mssql-server-linux:2017-latest
    ports:
    - published: 1433
      target: 1433
version: '3.4'